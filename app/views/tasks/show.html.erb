<h1><%= @task.title %></h1>  <%= link_to 'Edit this task', edit_task_path  %>

<h3><%= @task.details %></h3>

<% check = @task.completed ? "☑" : '□' %>
<% message = @task.completed ? "☑ This task is completed" : '□ This task is not completed yet'  %>
<h3><%= message %></h3>

<p><%= link_to 'Back to list', tasks_path  %></p>
<p><%= link_to "Delete Task?",task_path(@task), method: :delete, data: {confirm: "Delete #{@task.title}?" }  %></p>
